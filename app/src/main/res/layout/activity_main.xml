<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="40sp"
            android:textColor="#222222"
            tools:text="5+10-3"/>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="65sp"
            android:textColor="@color/green"
            tools:text="12"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/c_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="C"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraintLayout"
            app:layout_constraintEnd_toStartOf="@id/two_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/two_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="("
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/c_button"
            app:layout_constraintEnd_toStartOf="@id/three_button"
            app:layout_constraintTop_toTopOf="@id/constraintLayout"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/three_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text=")"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/two_button"
            app:layout_constraintTop_toTopOf="@id/constraintLayout"
            app:layout_constraintEnd_toStartOf="@id/four_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="รท"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/three_button"
            app:layout_constraintTop_toTopOf="@id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yedi_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_button"
            app:layout_constraintEnd_toStartOf="@id/sekiz_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sekiz_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/yedi_button"
            app:layout_constraintEnd_toStartOf="@id/dokuz_button"
            app:layout_constraintTop_toBottomOf="@id/two_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dokuz_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/sekiz_button"
            app:layout_constraintTop_toBottomOf="@id/three_button"
            app:layout_constraintEnd_toStartOf="@id/x_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/x_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ร"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/three_button"
            app:layout_constraintTop_toBottomOf="@id/four_button"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dort_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yedi_button"
            app:layout_constraintEnd_toStartOf="@id/bes_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bes_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/dort_button"
            app:layout_constraintEnd_toStartOf="@id/alti_button"
            app:layout_constraintTop_toBottomOf="@id/sekiz_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alti_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/bes_button"
            app:layout_constraintTop_toBottomOf="@id/dokuz_button"
            app:layout_constraintEnd_toStartOf="@id/eksi_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eksi_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/alti_button"
            app:layout_constraintTop_toBottomOf="@id/x_button"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bir_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dort_button"
            app:layout_constraintEnd_toStartOf="@id/iki_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/iki_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/bir_button"
            app:layout_constraintEnd_toStartOf="@id/uc_button"
            app:layout_constraintTop_toBottomOf="@id/bes_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uc_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/bes_button"
            app:layout_constraintTop_toBottomOf="@id/alti_button"
            app:layout_constraintEnd_toStartOf="@id/eksi_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/topla_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/alti_button"
            app:layout_constraintTop_toBottomOf="@id/eksi_button"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nokta_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text=","
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bir_button"
            app:layout_constraintEnd_toStartOf="@id/sifir_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sifir_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/nokta_button"
            app:layout_constraintEnd_toStartOf="@id/esittir_button"
            app:layout_constraintTop_toBottomOf="@id/iki_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/esittir_button"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:text="="
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/bes_button"
            app:layout_constraintTop_toBottomOf="@id/uc_button"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>